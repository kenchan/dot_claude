{
  "permissions": {
    "allow": [
      "Bash(bat:*)",
      "Bash(fd:*)",
      "Bash(gemini:*)",
      "Bash(gh:*)",
      "Bash(git:*)",
      "Bash(grep:*)",
      "Bash(jq:*)",
      "Bash(ls:*)",
      "Bash(npm:*)",
      "Bash(rg:*)",
      "Edit(**)",
      "MultiEdit(**)",
      "Write(**)",
      "Fetch(https://*)",
      "mcp__gemini-cli__ask-gemini",
      "mcp__playwright"
    ],
    "deny": []
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "jq -r '.tool_input.file_path' | xargs sed -i -e '$a\\'"
          },
          {
            "type": "command",
            "command": "jq -r '.tool_input.file_path' | xargs sed -i 's/[[:space:]]*$//'"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "if [ -d ~/.claude/.git ]; then pushd ~/.claude/projects; git add -A; git commit -m \"$(date)\"; git pull --rebase; git push; popd; fi"
          }
        ]
      }
    ]
  },
  "model": "opus"
}
